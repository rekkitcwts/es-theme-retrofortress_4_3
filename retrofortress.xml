<theme>

	<formatVersion>4</formatVersion>

	<variables>
		<mainFont>./_art/fonts/tf2build.ttf</mainFont>
	</variables>

	<view name="system">
		<image name="background" extra="true">
			<path>./_art/images/Background_2fort.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>

		<image name="mainmenuconsole" extra="true">
			<pos>0.045 0.20</pos>
			<path>./_art/images/main_menu_consolename.png</path>
		</image>

		<text name="system_name_1" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.305 0.015</size>
			<pos>0.189 0.232</pos>
			<origin>0 0</origin>
			<fontSize>0.04</fontSize>
			<alignment>left</alignment>
			<fontPath>${mainFont}</fontPath>
			<color>FFFFFF</color>
		</text>

		<image name="mainthemelogo" extra="true">
			<pos>0.063 0.09</pos>
			<path>./_art/images/RetroFortressLogo.png</path>
		</image>

		<image name="controller" extra="true">
			<pos>0.080 0.225</pos>
			<size>0.105 0.105</size>
			<path>./_art/images/controllers/${system.theme}.svg</path>
		</image>
	</view>

	<view name="system, basic, detailed, video">
		<image name="background_help" extra="true">
			<path>./_art/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.070</size>
			<color>39342E</color>
		</image>

		<image name="background_help_top" extra="true">
			<path>./_art/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.070</size>
			<color>2A2424</color>
		</image>

		
		<helpsystem name="help">
			<textColor>ECE2C9</textColor>
			<iconColor>ECE2C9</iconColor>
			<fontPath>${mainFont}</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>

	</view>

	<feature supported="carousel">

		<view name="system">

			<!-- Custom Vertical System View -->
			<image name="console" extra="true">
				<maxSize>0.500 0.700</maxSize>
				<pos>0.855 0.465</pos>
			</image>

			<carousel name="systemcarousel">
				<type>horizontal</type>
				<pos>0.265 0.05</pos>
				<size>0.980 1</size>
				<color>00d8e000</color>
				<logoScale>1.5</logoScale>
				<logoSize>0.225 1</logoSize>
				<maxLogoCount>1</maxLogoCount>
			</carousel>

			<text name="systemInfo">
				<origin>0 0</origin>
				<pos>0.189 0.242</pos>
				<size>0.980 0.050</size>
				<alignment>left</alignment>
				<backgroundColor>FFFFFF00</backgroundColor>
				<color>FFFFFF</color>
				<fontPath>${mainFont}</fontPath>
				<fontSize>0.025</fontSize>
			</text>

		</view>

	</feature>


	<view name="basic">

		<image name="background">
			<path>./_art/images/retrofortress_view_basic.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.27 0.09</pos>
			<maxSize>0.4 0.12</maxSize>
		</image>

		<textlist name="gamelist">
			<selectorColor>a19795</selectorColor>
			<selectedColor>ebe6dd</selectedColor>
			<primaryColor>00d8e0</primaryColor>
			<secondaryColor>888888</secondaryColor>
			<fontPath>./_art/fonts/VCR_OSD_MONO.ttf</fontPath>
			<pos>0.115 0.31</pos>
			<size>0.512 0.69</size>
			<fontSize>0.035</fontSize>
			<horizontalMargin>0.01</horizontalMargin>
			<alignment>left</alignment>
		</textlist>

		<text name="system_name_1" extra="true">
			<text>${system.theme}</text>
			<forceUppercase>1</forceUppercase>
			<size>0.305 0.015</size>
			<pos>0.119 0.142</pos>
			<origin>0 0</origin>
			<fontSize>0.06</fontSize>
			<alignment>left</alignment>
			<fontPath>${mainFont}</fontPath>
			<color>FFFFFF</color>
		</text>

	</view>

	<view name="detailed, video">

		<image name="background">
			<path>./_art/images/retrowave_view_detail.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>

			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.27 0.09</pos>
				<maxSize>0.4 0.12</maxSize>
			</image>

			<textlist name="gamelist">
				<selectorColor>e0009e</selectorColor>
				<selectedColor>00d8e0</selectedColor>
				<primaryColor>00d8e0</primaryColor>
				<secondaryColor>888888</secondaryColor>
				<fontPath>./_art/fonts/VCR_OSD_MONO.ttf</fontPath>
				<pos>0.05 0.21</pos>
				<size>0.44 0.69</size>
				<fontSize>0.035</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>e0009e</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_art/fonts/Axis Extrabold.otf</fontPath>
				<fontSize>0.0145</fontSize>
				<size>0.24 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>00d8e0</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_art/fonts/Axis Extrabold.otf</fontPath>
				<fontSize>0.0145</fontSize>
				<size>0.24 0.01</size>
			</text>
			<datetime name="md_releasedate, md_lastplayed">
				<color>00d8e0</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_art/fonts/Axis Extrabold.otf</fontPath>
				<fontSize>0.0145</fontSize>
				<size>0.24 0.01</size>
			</datetime>

				<text name="md_lbl_rating">
					<pos>0.54 0.52</pos>
				</text>
				<rating name="md_rating">
					<pos>0.635 0.515</pos>
					<size>0.145 0.0145</size>
					<filledPath>./_art/images/retrowave_triangle_blue_full.png</filledPath>
					<unfilledPath>./_art/images/retrowave_triangle_blue_empty.png</unfilledPath>
				</rating>

				<text name="md_lbl_players">
					<pos>0.54 0.55</pos>
				</text>
				<text name="md_players">
					<pos>0.635 0.55</pos>
				</text>

				<text name="md_lbl_playcount">
					<pos>0.54 0.58</pos>
				</text>
				<text name="md_playcount">
					<pos>0.635 0.58</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>0.54 0.61</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>0.635 0.61</pos>
				</datetime>

				<text name="md_lbl_genre">
					<pos>0.715 0.52</pos>
				</text>
				<text name="md_genre">
					<pos>0.79 0.52</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>0.715 0.55</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.79 0.55</pos>
				</datetime>

				<text name="md_lbl_developer">
					<pos>0.715 0.58</pos>
				</text>
				<text name="md_developer">
					<pos>0.79 0.584</pos>
					<size>.17 0.001</size>
				</text>

				<text name="md_lbl_publisher">
					<pos>0.715 0.61</pos>
				</text>
				<text name="md_publisher">
					<pos>0.79 0.614</pos>
					<size>.17 0.001</size>
				</text>

			<text name="md_description">
				<pos>0.53 0.68</pos>
				<size>0.44 0.21</size>
				<color>e0009e</color>
				<fontPath>./_art/fonts/VCR_OSD_MONO.ttf</fontPath>
				<fontSize>0.026</fontSize>
				<alignment>left</alignment>
				<forceUppercase>0</forceUppercase>
				<lineSpacing>1.6</lineSpacing>
			</text>

	</view>

	<view name="detailed">
		
		<image name="md_image">
			<maxSize>0.340 0.440</maxSize>
			<pos>0.755 0.25</pos>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<feature supported="video">

		<view name="video">

			<video name="md_video">
				<maxSize>0.4 0.33</maxSize>
				<pos>0.760 0.3</pos>
				<origin>0.5 0.5</origin>
				<delay>1.0</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<maxSize>0.35 0.10</maxSize>
				<pos>0.760 0.07</pos>
				<origin>0.5 0.5</origin>
			</image>
			
		</view>

	</feature>
</theme>
